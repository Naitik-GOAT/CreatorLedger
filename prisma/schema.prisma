generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  accounts      Account[]
  sessions      Session[]
  metrics       Metric[]
  integrations  PlatformIntegration[]
  aiInsights    AIInsight[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Metric {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime @default(now())
  revenue   Float
  expenses  Float
  profit    Float
  platform  String   // e.g., 'youtube', 'tiktok', 'instagram', 'sponsorships'
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PlatformIntegration {
  id           String   @id @default(cuid())
  userId       String
  platform     String   // e.g., 'youtube', 'tiktok', 'instagram'
  accessToken  String?
  refreshToken String?
  connectedAt  DateTime @default(now())
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, platform])
}

model AIInsight {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String
  severity    String   // 'low', 'medium', 'high'
  type        String   // 'opportunity', 'risk', 'trend'
  createdAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
